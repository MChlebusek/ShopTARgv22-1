@model IEnumerable<Shop.Models.RealEstates.RealEstateIndexViewModel>



<div class="h1">
    RealEstates
</div>

@{
    int rowNumber = 1;
}

<div>
    <a asp-action="create" asp-controller="RealEstates" class="btn btn-primary">Create</a>
</div>

<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Passangers</th>
                <th scope="col">Engine Power</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var RealEstate in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@RealEstate.Name</td>
                    <td>@RealEstate.Type</td>
                    <td>@RealEstate.Passengers</td>
                    <td>@RealEstate.EnginePower</td>
                    <td>
                        <a asp-action="details" asp-controller="realestates" asp-route-id="@RealEstate.Id" class="btn btn-info">Details</a>
                        <a asp-action="update" asp-controller="realestates" asp-route-id="@RealEstate.Id" class="btn btn-primary">Update</a>
                        <a asp-action="delete" asp-controller="realestates" asp-route-id="@RealEstate.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>

                rowNumber += 1;
            }

        </tbody>
    </table>
</form>